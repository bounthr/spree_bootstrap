<% address_id = address_type.chars.first %>
<div class="inner" data-hook=<%="#{address_type}_inner" %>>
  <%= form.label :firstname %>
  <div class="input-prepend field" id=<%="#{address_id}firstname" %>>
    <%= icon('user', :class => 'add-on') %>
    <%= form.text_field :firstname, :class => 'required', :required => true, :placeholder => t('.firstname.placeholder') %>
  </div>
  <%= form.label :lastname %>
  <div class="input-prepend field" id=<%="#{address_id}lastname" %>>
    <%= icon('user', :class => 'add-on') %>
    <%= form.text_field :lastname, :class => 'required', :required => true, :placeholder => t('.lastname.placeholder') %>
  </div>

  <% if Spree::Config[:company] %>
    <p class="field" id=<%="#{address_id}company" %>>
      <%= form.label :company, t(:company) %><br />
      <%= form.text_field :company %>
    </p>
  <% end %>

  <%= form.label :address1 %>
  <div class="input-prepend field" id=<%="#{address_id}address1" %>>
    <%= icon('road', :class => 'add-on') %>
    <%= form.text_field :address1, :class => 'required', :required => true, :placeholder => t('.address1.placeholder') %>
  </div>

  <%= form.label :address2 %>
  <div class="input-prepend field" id=<%="#{address_id}address2" %>>
    <%= icon('home', :class => 'add-on') %>
    <%= form.text_field :address2, :placeholder => t('.address2.placeholder') %>
  </div>

  <%= form.label :city %>
  <div class="input-prepend field" id=<%="#{address_id}city" %>>
    <%= icon('map-marker', :class => 'add-on') %>
    <%= form.text_field :city, :class => 'required', :required => true, :placeholder => t('.city.placeholder') %>
  </div>

  <%= form.label :zipcode %>
  <div class="input-prepend field" id=<%="#{address_id}zipcode" %>>
    <%= icon('envelope', :class => 'add-on') %>
    <%= form.text_field :zipcode, :class => 'required', :required => true, :placeholder => t('.zipcode.placeholder') %>
  </div>

  <%= form.label :country_id %>
  <div class="input-prepend field" id=<%="#{address_id}country" %>>
    <%= icon('globe', :class => 'add-on') %>

    <span id=<%="#{address_id}country-selection" %>>
      <%= form.collection_select :country_id, available_countries, :id, :name, {}, {:class => 'required', :required => true } %>
    </span>
  </p>

  <% if Spree::Config[:address_requires_state] %>
    <p class="field" id=<%="#{address_id}state" %>>
      <% have_states = !address.country.states.empty? %>
      <%= form.label :state, t(:state) %><span class='required' id=<%="#{address_id}state-required"%>>*</span><br/>

      <% state_elements = [
         form.collection_select(:state_id, address.country.states,
                            :id, :name,
                            {:include_blank => true},
                            {:class => have_states ? 'required' : 'hidden',
                            :disabled => !have_states}) +
         form.text_field(:state_name,
                            :class => !have_states ? 'required' : 'hidden',
                            :disabled => have_states)
         ].join.gsub('"', "'").gsub("\n", "")
      %>
      <%= javascript_tag do -%>
        $('#<%="#{address_id}state" %>').append("<%== state_elements %>");
      <% end %>
    </p>
      <noscript>
        <%= form.text_field :state_name, :class => 'required', :required => true %>
      </noscript>
  <% end %>

  <%= form.label :phone %>
  <div class="input-prepend field" id=<%="#{address_id}phone" %>>
    <%= icon('phone', :class => 'add-on') %>
    <%= form.phone_field :phone, :class => 'required', :required => true,  :placeholder => t('.phone.placeholder')  %>
  </div>

  <% if Spree::Config[:alternative_shipping_phone] %>
    <p class="field" id=<%="#{address_id}altphone" %>>
      <%= form.label :alternative_phone, t(:alternative_phone) %>
      <%= form.phone_field :alternative_phone %>
    </p>
  <% end %>
</div>