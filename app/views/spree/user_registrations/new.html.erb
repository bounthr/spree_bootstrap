<% @body_id = 'signup' %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>

<div id="new-customer" class='span5'>
  <h6><%= Spree.t(:create_a_new_account) %></h6>

  <div data-hook="signup">

    <%= form_for Spree::User.new, :as => :spree_user, :url => spree.spree_user_registration_path(@spree_user) do |f| %>
      <div data-hook="signup_inside_form">
        <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
        <p><%= f.submit Spree.t(:sign_up), :class => 'btn btn-primary' %></p>
      </div>
    <% end %>
    <%= Spree.t(:or) %> <%= link_to Spree.t(:login_as_existing), spree.login_path %>

  </div>

</div>

<div data-hook="login_extras"></div>