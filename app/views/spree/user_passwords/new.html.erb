<div id="forgot-password">
  <h6><%= t(:forgot_password) %></h6>

  <p><%= t(:instructions_to_reset_password) %></p>

  <%= form_for Spree::User.new, :as => :user, :url => spree.user_password_path do |f| %>
    <div class="input-prepend">
      <%= icon('envelope-alt', :class => 'add-on') %>
      <%= f.email_field :email, :class => 'required', :required => true, :placeholder => t('.email.placeholder') %>
    </div>
    <div>
      <%= f.submit t(:reset_password), :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>
